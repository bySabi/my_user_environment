if ! grep "## bySabi" $HOME/.bashrc >/dev/null
then
cat  >> $HOME/.bashrc <<"EOF"

## bySabi
source /etc/bash_completion.d/git-prompt
PS1=$PS1'$(__git_ps1 "\[\e[0;32m\](%s) \[\e[0m\]")

alias apt-full='apt-get update && apt-get upgrade -y -q && apt-get dist-upgrade -y -q && aptitude full-upgrade && apt-get -y-q autoclean && apt-get -y -q autoremove'
EOF
fi
